<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mihorario.FXMLLoginController">
    
    <stylesheets>
        <URL value="@Login.css" />
    </stylesheets>
    
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <Text id="texto_bienvenida" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
 
    <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="btnEntrar" disable="true" onAction="#handleSubmitButtonAction" text="Sign In" />
    </HBox>
    
    <ImageView id="logo" fx:id="logo" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="6">
      <image>
         <Image url="@junta.png" />
      </image>
   </ImageView>
    <!--<Rectangle fx:id="cuadrado" id="cuadrado" 
               width="50" height="50"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>-->

    <Text id="mensaje" fx:id="actiontarget" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
   <ComboBox fx:id="cbProfesor" onAction="#handleComboBoxAction" prefWidth="150.0" promptText="Selecciona" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
