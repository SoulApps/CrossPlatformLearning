<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.iessaladillo.iessaladillo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DiaReservaActivity"
            android:label="@string/title_activity_dia_reserva"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.iessaladillo.iessaladillo.MainActivity" />
        </activity>
        <activity
            android:name=".SolucionarIncidenciaActivity"
            android:label="@string/title_activity_solucionar_incidencia_fragment"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.iessaladillo.iessaladillo.MainActivity" />
        </activity>
        <activity
            android:name=".DatosHardwareActivity"
            android:label="@string/title_activity_datos_hardware"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.iessaladillo.iessaladillo.MainActivity" />
        </activity>
        <activity
            android:name=".MaterialesActivity"
            android:label="@string/title_activity_materiales"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.iessaladillo.iessaladillo.DatosHardwareActivity" />
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/configuracion"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.iessaladillo.iessaladillo.MainActivity" />
        </activity>
    </application>

</manifest>