<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.saladillo.alejandro.selecciondirectadialog.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equipos_favoritos"
        android:id="@+id/textView" />

    <Button
        android:text="@string/borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnElegir"
        android:layout_alignLeft="@+id/btnElegir"
        android:layout_alignStart="@+id/btnElegir"
        android:layout_marginTop="26dp"
        android:id="@+id/btnBorrar" />

    <Button
        android:text="@string/elegir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:id="@+id/btnElegir"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:text="@string/seleccion_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBorrar"
        android:layout_alignLeft="@+id/btnBorrar"
        android:layout_alignStart="@+id/btnBorrar"
        android:layout_marginTop="42dp"
        android:id="@+id/btnSimple" />

    <Button
        android:text="@string/multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSimple"
        android:layout_alignLeft="@+id/btnSimple"
        android:layout_alignStart="@+id/btnSimple"
        android:layout_marginTop="44dp"
        android:id="@+id/btnMulti" />
</RelativeLayout>
