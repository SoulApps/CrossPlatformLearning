<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.saladillo.alejandro.calculadorapropinas.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margen8"
        app:contentPadding="@dimen/margen8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtCuenta"
                tools:text="cuenta"
                android:selectAllOnFocus="true"
                android:gravity="end"
                app:layout_constraintEnd_toStartOf="@+id/lblEuro1"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/lblCuenta"
                app:layout_constraintHorizontal_bias="0.0" />


            <TextView
                android:text="@string/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEuro1"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintTop_toBottomOf="@+id/lblCuenta"
                app:layout_constraintRight_toRightOf="parent" />


            <TextView
                android:text="@string/cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblCuenta"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lblEuro1"/>





            <TextView
                android:text="@string/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEuro2"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblPropina" />

            <TextView
                android:text="@string/porcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPorcentaje"
                android:layout_marginRight="@dimen/margen8"
                android:layout_marginEnd="@dimen/margen8"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro2"
                app:layout_constraintRight_toLeftOf="@+id/txtPropina"
                app:layout_constraintLeft_toRightOf="@+id/txtPorcentajePropina"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:text="@string/prop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPorcentajePropina"
                app:layout_constraintRight_toRightOf="@+id/txtPorcentajePropina"
                app:layout_constraintBottom_toBottomOf="@+id/lblPropina"
                app:layout_constraintTop_toTopOf="@+id/lblPropina" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:gravity="end"
                android:selectAllOnFocus="true"
                android:id="@+id/txtPorcentajePropina"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lblPorcentaje"
                tools:text="%prop"
                app:layout_constraintHorizontal_bias="0.53" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="5"
                android:gravity="end"
                android:focusable="false"
                app:layout_constraintLeft_toRightOf="@+id/lblPorcentaje"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro2"
                android:id="@+id/txtPropina"
                app:layout_constraintRight_toLeftOf="@+id/lblEuro2"
                tools:text="propina" />

            <TextView
                android:text="@string/propina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPropina"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toLeftOf="@+id/lblEuro1"
                app:layout_constraintTop_toBottomOf="@+id/lblEuro1"/>






            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:gravity="end"
                android:focusable="false"
                android:id="@+id/txtTotal"
                tools:text="total"
                app:layout_constraintRight_toRightOf="@+id/lblTotal"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro3"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:text="@string/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEuro3"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintRight_toRightOf="@+id/lblEuro2"
                app:layout_constraintTop_toBottomOf="@+id/lblTotal"/>

            <TextView
                android:text="@string/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/lblTotal"
                app:layout_constraintTop_toBottomOf="@+id/lblEuro2"
                app:layout_constraintRight_toLeftOf="@+id/lblEuro2" />



            <Button
                android:text="@string/redondear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRedondear1"
                android:layout_marginTop="16dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/txtTotal"
                app:layout_constraintRight_toRightOf="@+id/lblEuro3" />

            <Button
                android:text="@string/limpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLimpiar1"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintRight_toLeftOf="@+id/btnRedondear1"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnRedondear1"  />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margen8"
        app:contentPadding="@dimen/margen8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="@string/por_comensal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPorComensal"
                app:layout_constraintRight_toLeftOf="@+id/lblEuro4"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:text="@string/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEuro4"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintTop_toBottomOf="@+id/lblPorComensal"
                app:layout_constraintRight_toRightOf="parent" />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="5"
                android:id="@+id/txtPorComensal"
                tools:text="comensales"
                android:gravity="end"
                android:focusable="false"
                app:layout_constraintLeft_toRightOf="@+id/txtComensales"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro4"
                app:layout_constraintRight_toRightOf="@+id/lblPorComensal"
                app:layout_constraintHorizontal_bias="0.0" />


            <TextView
                android:text="@string/comensales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblComensales"
                app:layout_constraintTop_toTopOf="@+id/lblPorComensal"
                app:layout_constraintRight_toRightOf="@+id/txtComensales" />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtComensales"
                tools:text="n"
                android:gravity="end"
                android:selectAllOnFocus="true"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblEuro4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintRight_toLeftOf="@+id/txtPorComensal" />


            <Button
                android:text="@string/redondear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRedondear2"
                android:layout_marginTop="16dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/txtPorComensal"
                app:layout_constraintRight_toRightOf="@+id/lblEuro4" />

            <Button
                android:text="@string/limpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLimpiar2"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintRight_toLeftOf="@+id/btnRedondear2"
                app:layout_constraintBottom_toBottomOf="@+id/btnRedondear2"
                app:layout_constraintTop_toTopOf="@+id/btnRedondear2" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
