<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.saladillo.alejandro.vistasbasicas3.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baldomero"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.43" />

    <TextView
        android:text="@string/baldomero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblBaldomero"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView" />

    <TextView
        android:text="@string/edad"
        android:layout_width="58dp"
        android:layout_height="21dp"
        android:id="@+id/lblEdad"
        app:layout_constraintRight_toLeftOf="@+id/lblBaldomero"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.77"
        app:layout_constraintTop_toTopOf="@+id/lblBaldomero"
        app:layout_constraintBottom_toTopOf="@+id/lblEmail"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="3"
        android:id="@+id/txtEdad"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lblEdad"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/lblEdad" />

    <CheckBox
        android:text="@string/repetidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkRepetidor"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEdad"
        app:layout_constraintLeft_toLeftOf="@+id/chkCasado"
        app:layout_constraintTop_toTopOf="@+id/lblBaldomero"
        app:layout_constraintBottom_toTopOf="@+id/chkCasado"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.65999997" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp">

        <RadioButton
            android:id="@+id/rdbHombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/h" />
        <RadioButton
            android:id="@+id/rdbMujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m" />

    </RadioGroup>

    <CheckBox
        android:text="@string/casado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkCasado"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEmail"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="@string/pareja"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:id="@+id/lblPareja"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/chkCasado"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPareja"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="invisible"
        android:id="@+id/txtPareja"
        app:layout_constraintLeft_toLeftOf="@+id/chkRepetidor"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.07" />

    <Switch
        android:text="@string/jamon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        app:layout_constraintLeft_toLeftOf="@+id/btnAceptar"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptar"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="@+id/btnAceptar" />

    <Button
        android:text="@string/aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAceptar"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblEmail"
        app:layout_constraintRight_toLeftOf="@+id/txtEdad"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="32dp" />

    <EditText
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:imeOptions="actionSend"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblEmail"
        android:id="@+id/txtEmail"
        app:layout_constraintBottom_toBottomOf="@+id/lblEmail"
        app:layout_constraintTop_toBottomOf="@+id/lblEmail"
        app:layout_constraintLeft_toRightOf="@+id/lblEmail"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/chkCasado"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>
