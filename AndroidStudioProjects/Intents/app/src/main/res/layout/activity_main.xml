<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.saladillo.alejandro.intents.MainActivity">

    <Button
        android:text="NAVEGAR A URL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnUrl" />

    <Button
        android:text="BUSCAR EN INTERNET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscar"
        android:layout_below="@+id/btnUrl"
        android:layout_alignLeft="@+id/btnUrl"
        android:layout_alignStart="@+id/btnUrl" />

    <Button
        android:text="LLAMAR A CONTACTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLlamar"
        android:layout_below="@+id/btnBuscar"
        android:layout_alignLeft="@+id/btnBuscar"
        android:layout_alignStart="@+id/btnBuscar" />

    <Button
        android:text="MARCAR NÚMERO DE TELÉFONO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMarcar"
        android:layout_below="@+id/btnLlamar"
        android:layout_alignLeft="@+id/btnLlamar"
        android:layout_alignStart="@+id/btnLlamar" />

    <Button
        android:text="MOSTRAR MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVerMapa"
        android:layout_below="@+id/btnMarcar"
        android:layout_alignLeft="@+id/btnMarcar"
        android:layout_alignStart="@+id/btnMarcar" />

    <Button
        android:text="BUSCAR EN EL MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscarMapa"
        android:layout_below="@+id/btnVerMapa"
        android:layout_alignLeft="@+id/btnVerMapa"
        android:layout_alignStart="@+id/btnVerMapa" />

    <Button
        android:text="ENVIAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtMensaje"
        android:layout_toRightOf="@+id/txtMensaje"
        android:layout_toEndOf="@+id/txtMensaje"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/btnEnviar" />

    <Button
        android:text="MOSTRAR LISTA DE CONTACTOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLista"
        android:layout_below="@+id/btnBuscarMapa"
        android:layout_alignLeft="@+id/btnBuscarMapa"
        android:layout_alignStart="@+id/btnBuscarMapa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtMensaje"
        android:layout_marginBottom="46dp"
        tools:text="MENSAJE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
