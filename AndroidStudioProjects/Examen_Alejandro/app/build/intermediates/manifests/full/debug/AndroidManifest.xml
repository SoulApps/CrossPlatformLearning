<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.saladillo.alejandro.examen_alejandro"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="es.saladillo.alejandro.examen_alejandro.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="es.saladillo.alejandro.examen_alejandro.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.saladillo.alejandro.examen_alejandro.AgregarActivity"
            android:label="@string/title_activity_agregar"
            android:parentActivityName="es.saladillo.alejandro.examen_alejandro.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="es.saladillo.alejandro.examen_alejandro.PreferenciasActivity"
            android:label="@string/action_preferencias"
            android:parentActivityName="es.saladillo.alejandro.examen_alejandro.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>