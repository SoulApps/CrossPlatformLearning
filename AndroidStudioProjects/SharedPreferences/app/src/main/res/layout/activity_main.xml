<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.saladillo.alejandro.sharedpreferences.MainActivity">

    <TextView
        android:text="Yo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblYo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lblOtro"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Otro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblOtro"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/lblYo" />


    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPuntosYo"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOtro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lblOtro"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lblYo" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPuntosOtro"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lblOtro"
        app:layout_constraintLeft_toLeftOf="@+id/lblYo" />

    <Button
        android:text="+ para mÃ­"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnYo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblPuntosYo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/btnOtro"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="+ para otro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOtro"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/btnYo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnYo"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
