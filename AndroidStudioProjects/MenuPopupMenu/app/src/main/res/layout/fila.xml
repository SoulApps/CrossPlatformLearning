<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgFoto"
        android:clickable="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:srcCompat="@mipmap/ic_menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre"
        app:layout_constraintLeft_toLeftOf="@+id/lblNombre"
        android:id="@+id/lblEdad"
        tools:text="edad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/lblNombre"
        tools:text="nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblEdad"
        app:layout_constraintLeft_toLeftOf="@+id/lblNombre"
        android:id="@+id/lblRepetidor"
        tools:text="repetidor" />
</android.support.constraint.ConstraintLayout>