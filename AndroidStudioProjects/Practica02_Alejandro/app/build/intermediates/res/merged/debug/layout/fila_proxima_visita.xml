<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/margin_horizontal_datos_alumnos"
    android:paddingRight="@dimen/margin_horizontal_datos_alumnos"
    android:layout_marginBottom="@dimen/margin_horizontal_datos_alumnos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgFotoAlumno"
        android:text="@string/visita"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingRight="10dp"
        android:src="@drawable/default_alumno_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblNombreAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        tools:text="nombre"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@+id/imgFotoAlumno"
        app:layout_constraintBottom_toTopOf="@+id/lblFecha"
        app:layout_constraintLeft_toRightOf="@+id/imgFotoAlumno" />

    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        tools:text="Fecha"
        app:layout_constraintBottom_toBottomOf="@+id/imgFotoAlumno"
        app:layout_constraintTop_toBottomOf="@+id/lblNombreAlumno"
        app:layout_constraintLeft_toRightOf="@+id/imgFotoAlumno" />

    <TextView
        android:id="@+id/lblFechaVisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        tools:text="01/01/2001"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblFecha"
        app:layout_constraintLeft_toRightOf="@+id/lblFecha" />

</android.support.constraint.ConstraintLayout>