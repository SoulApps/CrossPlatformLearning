<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/margin_horizontal_datos_alumnos"
    android:paddingRight="@dimen/margin_horizontal_datos_alumnos"
    android:layout_marginTop="@dimen/margin_horizontal_datos_alumnos"
    android:layout_marginBottom="@dimen/margin_horizontal_datos_alumnos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lblVisita"
        android:text="@string/visita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/lblFechaVisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:text="25/02/2017"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblVisita"
        app:layout_constraintLeft_toRightOf="@+id/lblVisita"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/lblHoraVisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="09:22-10-25"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblVisita"
        app:layout_constraintRight_toRightOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/lblResumen"
        android:text="@string/resumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblVisita"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/lblContenidoResumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:text="Resumen"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblResumen"
        app:layout_constraintLeft_toRightOf="@+id/lblResumen"
        android:textAppearance="@style/TextAppearance.AppCompat" />

</android.support.constraint.ConstraintLayout>