<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="110dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/descarga"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgFoto"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre"
        app:layout_constraintLeft_toLeftOf="@+id/lblNombre"
        android:id="@+id/lblEdad"
        tools:text="edad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgFoto"
        android:id="@+id/lblNombre"
        tools:text="nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lblEdad"
        app:layout_constraintLeft_toLeftOf="@+id/lblNombre"
        android:id="@+id/lblRepetidor"
        tools:text="repetidor" />
</android.support.constraint.ConstraintLayout>