	public static String mostarSopaLetras(String crearSopaLetras){
		
		int i;
		int j;
		
		System.out.println("Sopa:");
		for(i=0 ; i<crearSopaLetras.length ; i++){
			for(j=0 ; j<crearSopaLetras[i].length; j++){
				System.out.print(" "+crearSopaLetras[i][j]);
			}
			System.out.println();
		}
		
	}
