	public static int arriba(String[]array,int columna){
		
		
		for(columna=0;columna<array.length;columna--){
		System.out.println(array[1]);
		
		}
	
		return columna;
	}
	
	
	public static int abajo(String[]array,int columna){
	
	
		for(columna=0;columna<array.length;columna++){
