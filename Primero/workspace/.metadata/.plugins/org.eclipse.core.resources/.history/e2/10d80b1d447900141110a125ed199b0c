	public static String crearSopaLetras(String[] palabras,int derecha){
		
		String sopa[][]= new String[17][17];
		palabras[6]==1;
			
		return sopa;
		
	}
	
	public static String mostarSopaLetras(String crearSopaLetras){ //Entrada-salida.
		
		int i;
		int j;
		
		System.out.println("Sopa:");
		for(i=0 ; i<crearSopaLetras.length ; i++){
			for(j=0 ; j<crearSopaLetras[i].length; j++){
				System.out.print(" "+crearSopaLetras[i][j]);
			}
			System.out.println();
		}
		
	}
	
	
	
	//Las funciones son de entrada-salida.
	public static int izquierda(String[]array,int fila){
		
		
		for(fila=0;fila<array.length;fila--){
		
		
		}
	
		return fila;
	}
	
	
