package Examenes;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Examen {

	
public static String crearSopaLetras(String[] palabras,int derecha){
		
		String sopa[][]= new String[17][17];
		palabras[6]=derecha;
			
		return sopa;
		
	}
	
	public static String mostarSopaLetras(String crearSopaLetras){
		
		int i;
		int j;
		
		System.out.println("Sopa:");
		for(i=0 ; i<crearSopaLetras.length ; i++){
			for(j=0 ; j<crearSopaLetras[i].length; j++){
				System.out.print(" "+crearSopaLetras[i][j]);
			}
			System.out.println();
		}
		
	}
}