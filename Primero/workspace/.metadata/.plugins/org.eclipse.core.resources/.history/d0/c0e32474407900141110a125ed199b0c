	public static int izquierda(String[]array,int fila){
		
		
		for(fila=0;fila<array.length;fila--){
		System.out.println(array[1]);
		
		}
	
		return fila;
	}
	
	
	public static int derecha(String[]array,int fila){
		
		
		for(fila=0;fila<array.length;fila++){
